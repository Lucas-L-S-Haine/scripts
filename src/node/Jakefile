const { desc, task, directory } = require("jake");
const { runList, runLink, runUnlink } = require("./lib/jake_actions");
const path = require("path");

const BIN_DIR = path.resolve("../..", "bin");

task("default", ["link"]);

desc("create symbolic links at target directory");
task("link", runLink);

desc("remove symbolic links");
task("unlink", [BIN_DIR], runUnlink);

directory(BIN_DIR);

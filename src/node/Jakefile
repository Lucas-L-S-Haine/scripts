const { desc, task } = require('jake');
const { runList, runLink, runClean } = require('./lib/jakeActions');

desc('list js files and symlinks');
task('list', runList);

desc('create symbolic links at target directory');
task('link', ['list'], runLink);

desc('remove symbolic links');
task('clean', runClean);

desc('alias for "clean"');
task('unlink', runClean);
